# --- Build stage ---
FROM python:3.13-slim-bullseye AS builder

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONUSERBASE=/install

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libffi-dev \
    libpq-dev \
    make \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy development requirements which include uvicorn for auto-reload
COPY infra/requirements/dev.txt infra/requirements/base.txt ./requirements/
RUN pip install --upgrade pip \
    && pip install --no-cache-dir --user -r requirements/dev.txt

# --- Final stage ---
FROM python:3.13-slim-bullseye

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONUSERBASE=/install \
    PATH="/install/bin:$PATH" \
    PYTHONPATH="/install/lib/python3.13/site-packages"

RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    wget \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY --from=builder /install /install
COPY . .
